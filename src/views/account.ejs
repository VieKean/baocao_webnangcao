<div class="mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <!-- Card for Create Account and Account List -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Account Management</h3>
                </div>
                <div class="card-body">
                    <!-- Button to open Create Account Modal -->
                    <div class="mb-3">
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createAccountModal">
                            Create Account
                        </button>
                    </div>

                    <!-- Modal for Create Account Form -->
                    <div class="modal fade" id="createAccountModal" tabindex="-1" aria-labelledby="createAccountModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="createAccountModalLabel">Create Account</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form method="post" action="/account/create-account" id="createAccountForm">
                                        <!-- Form fields here -->
                                        <div class="mb-3">
                                            <label for="username" class="form-label">Username:</label>
                                            <input type="text" class="form-control" id="username" placeholder="Enter username" name="username" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="password" class="form-label">Password:</label>
                                            <input type="password" class="form-control" id="password" placeholder="Enter password" name="password" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="confirmPassword" class="form-label">Confirm Password:</label>
                                            <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm password" name="confirmPassword" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="fullname" class="form-label">Fullname:</label>
                                            <input type="text" class="form-control" id="fullname" placeholder="Enter fullname" name="fullname" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="address" class="form-label">Address:</label>
                                            <input type="text" class="form-control" id="address" placeholder="Enter address" name="address" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="phonenumber" class="form-label">Phone Number:</label>
                                            <input type="text" class="form-control" id="phonenumber" placeholder="Enter phone number" name="phonenumber" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="email" class="form-label">Email:</label>
                                            <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="role" class="form-label">Role:</label>
                                            <select class="form-control" id="role" name="role" required>
                                                <option value="staff">Staff</option>
                                                <option value="admin">Admin</option>
                                            </select>
                                        </div>
                                        <div class="text-danger" id="error-message" style="display: none;">Passwords do not match!</div>
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Table for Listing Accounts -->
                    <div class="mt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Username</th>
                                    <th>Full Name</th>
                                    <th>Address</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let index=0; index < data.rows.length; index++) { const account=data.rows[index]; %>
                                    <tr>
                                        <th scope="row"><%= index + 1 %></th>
                                        <td><%= account.username %></td>
                                        <td><%= account.full_name %></td>
                                        <td><%= account.address %></td>
                                        <td><%= account.phone_number %></td>
                                        <td><%= account.email %></td>
                                        <td><%= account.role %></td>
                                        <td>
                                            <a href="/account/update/<%= account.id %>" class="btn btn-warning">Edit</a>
                                            <a href="javascript:void(0);" class="btn btn-danger delete-btn" data-bs-toggle="popover"
                                                data-bs-trigger="focus" data-bs-html="true" title="Confirm Delete" data-bs-content="
                                                <p>Are you sure you want to delete this account?</p>
                                                <div class='d-flex justify-content-between'>
                                                    <a class='btn btn-secondary btn-sm cancel-btn'>Cancel</a>
                                                    <a href='/account/delete/<%= account.id %>' class='btn btn-danger btn-sm'>Delete</a>
                                                </div>">
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="scripts/confirmDelete.js"></script>
