<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0 text-center">
                        <%= data.title %>
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Username -->
                    <div class="mb-3 d-flex align-items-center">
                        <label class="form-label w-25">Username:</label>
                        <p class="form-control-plaintext w-75">
                            <%= data.customer.username %>
                        </p>
                    </div>

                    <!-- Full Name -->
                    <div class="mb-3 d-flex align-items-center">
                        <label class="form-label w-25">Full Name:</label>
                        <p class="form-control-plaintext w-75">
                            <%= data.customer.full_name %>
                        </p>
                    </div>

                    <!-- Address -->
                    <div class="mb-3 d-flex align-items-center">
                        <label class="form-label w-25">Address:</label>
                        <p class="form-control-plaintext w-75">
                            <%= data.customer.address %>
                        </p>
                    </div>

                    <!-- Phone Number -->
                    <div class="mb-3 d-flex align-items-center">
                        <label class="form-label w-25">Phone Number:</label>
                        <p class="form-control-plaintext w-75">
                            <%= data.customer.phone_number %>
                        </p>
                    </div>

                    <!-- Email -->
                    <div class="mb-3 d-flex align-items-center">
                        <label class="form-label w-25">Email:</label>
                        <p class="form-control-plaintext w-75">
                            <%= data.customer.email %>
                        </p>
                    </div>

                    <!-- Creation Date -->
                    <div class="mb-3 d-flex align-items-center">
                        <label class="form-label w-25">Creation Date:</label>
                        <p class="form-control-plaintext w-75">
                            <%= data.customer.creation_date %>
                        </p>
                    </div>

                    <!-- Birth Date -->
                    <div class="mb-3 d-flex align-items-center">
                        <label class="form-label w-25">Birth Date:</label>
                        <p class="form-control-plaintext w-75">
                            <%= data.customer.birth_date %>
                        </p>
                    </div>

                    <!-- Gender -->
                    <div class="mb-3 d-flex align-items-center">
                        <label class="form-label w-25">Gender:</label>
                        <p class="form-control-plaintext w-75">
                            <% if (data.customer.gender === 'male') { %>
                                <span class="badge bg-info">Male</span>
                            <% } else if (data.customer.gender === 'female') { %>
                                <span class="badge bg-warning">Female</span>
                            <% } else { %>
                                <span class="badge bg-secondary">Other</span>
                            <% } %>
                        </p>
                    </div>

                    <!-- Back Button -->
                    <div class="text-center">
                        <a href="/customer" class="btn btn-secondary btn-lg">Back to Customers List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    label {
        margin-bottom: 0!important;
    }
</style>