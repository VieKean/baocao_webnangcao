<!-- customer.ejs -->
<div class=" mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <%= data.title %>
                    </h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                                <th>Creation Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.rows.forEach(function(customer) { %>
                                <tr>
                                    <td>
                                        <%= customer.username %>
                                    </td>
                                    <td>
                                        <%= customer.full_name %>
                                    </td>
                                    <td>
                                        <%= customer.email %>
                                    </td>
                                    <td>
                                        <%= customer.phone_number %>
                                    </td>
                                    <td>
                                        <%= customer.creation_date %>
                                    </td>
                                    <td>
                                        <a href="/customer/<%= customer.id %>" class="btn btn-info btn-sm">View</a>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>